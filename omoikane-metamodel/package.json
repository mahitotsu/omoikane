{
  "name": "omoikane-metamodel",
  "version": "1.0.0",
  "description": "Omoikane ITDelivery Metamodel - ユースケース・要件定義のためのTypeScriptメタモデル",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "omoikane-auto-build": "./scripts/auto-build.ts",
    "omoikane-generate-references": "./scripts/generate-typed-references.ts",
    "omoikane-convert-references": "./scripts/convert-references.ts",
    "omoikane-quality-assessment": "./scripts/quality-assessment.ts"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun --watch src/index.ts",
    "type-check": "bun --bun tsc --noEmit",
    "lint": "eslint . --ext .ts --ignore-path ../.gitignore",
    "lint:fix": "eslint . --ext .ts --ignore-path ../.gitignore --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\" --ignore-path ../.gitignore",
    "format:check": "prettier --check \"**/*.{ts,json,md}\" --ignore-path ../.gitignore",
    "code-quality": "bun run format && bun run lint:fix && bun run type-check",
    "quality-assessment": "bun scripts/quality-assessment.ts",
    "test": "bun test"
  },
  "keywords": [
    "typescript",
    "usecase",
    "requirements",
    "itdelivery",
    "metamodel",
    "omoikane"
  ],
  "author": "omoikane",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "scripts/**/*",
    "README.md"
  ]
}
